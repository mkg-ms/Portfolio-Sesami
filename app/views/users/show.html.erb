<% provide(:title, '勤怠情報') %>
<div>
  <div>
    <table class="table-bordered table-condensed">
      <tbody>
        <tr>
          <td colspan="2">
            <%= link_to "←", user_path(params: {id: @user.id, first_day: @first_day.prev_month}),
                             class: "btn btn-xs btn-primary" %>
            &emsp;<%= @first_day.to_s(:year_month) %> 時間管理表&emsp;
            <%= link_to "→", user_path(params: {id: @user.id, first_day: @first_day.next_month}),
                             class: "btn btn-xs btn-primary" %>
          </td>
          <td colspan="1">指定勤務開始時間:<%= format_basic_time(@user.work_time) %><br>
                          指定勤務終了時間:<%= format_basic_time(@user.work_time) %></td>
          <td colspan="2">基本時間:<%= format_basic_time(@user.basic_time) %></td>
          <td colspan="1">初日 <%= @first_day.to_s(:date) %></td>
        </tr>
        <tr>
          <td colspan="2">所属:<%= @user.affiliation.present? ? @user.affiliation : "未設定" %></td>
          <td colspan="1">名前:<%= @user.name %></td>
          <td colspan="1">コード:</td>
          <td colspan="1">出勤日数:<%= @worked_sum %>日</td>
          <td colspan="1">締日 <%= @last_day.to_s(:date) %></td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <div>
    <% if current_user.superior? %>
      <%= link_to "[所属長承認申請のお知らせ]", class: "btn" %>
    <% end %>
  </div>
  <div>
    <% if current_user.superior? %>
      <%= link_to "[勤怠変更申請のお知らせ]", class: "btn" %>
    <% end %>  
  </div>
  <div>
    <% if current_user.superior? %>
      <%= link_to "[残業申請のお知らせ]", class: "btn" %>
    <% end %>  
  </div>
  
  <div>
    <%= link_to "勤怠を編集", edit_attendances_path(@user, @first_day), class: "btn btn-primary" %>&emsp;
    <%= link_to "CSV出力", edit_attendances_path(@user, @first_day), class: "btn btn-primary" %>&emsp;
    <%= link_to "勤怠修正ログ(承認済)", edit_attendances_path(@user, @first_day), class: "btn btn-primary" %>
  </div>

  <table class="table-bordered table-striped table-condensed">
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="8">[実績]</th>
        <th colspan="5">[所定外勤務]</th>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外勤務</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示者確認印</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    
    <tbody>
      <% @dates.each do |day| %>
        <tr>
          <td><%= link_to "残業申請", edit_attendances_overtime_path(@user, day), remote: true, class: "btn btn-primary" %></td>
          <td><%= day.worked_on.to_s(:date) %></td>
          <td>
            <% if day.worked_on.wday == 0 %>
              <font color="red"><%= %w{日 月 火 水 木 金 土}[day.worked_on.wday] %></font>
            <% elsif day.worked_on.wday == 6 %>
              <font color="blue"><%= %w{日 月 火 水 木 金 土}[day.worked_on.wday] %></font>
            <% else %>
              <%= %w{日 月 火 水 木 金 土}[day.worked_on.wday] %>
            <% end %>
          </td>
          <td><%= day.started_at.to_s(:hour) if day.started_at.present? %></td>
          <td><%= day.started_at.time.floor_to(60*15).to_s(:min) if day.started_at.present? %></td>
          <td>
            <% if day.worked_on == Date.today && day.started_at.nil? %>
              <%= button_to "出社", user_attendances_path(@user), class: "btn btn-xs btn-primary" %>
            <% end %>
          </td>
          <td><%= day.finished_at.to_s(:hour) if day.finished_at.present? %></td>
          <td><%= day.finished_at.time.floor_to(60*15).to_s(:min) if day.finished_at.present? %></td>
          <td>
            <% if day.worked_on == Date.today && day.started_at.present? && day.finished_at.nil? %>
              <%= button_to "退社", user_attendances_path(@user), class: "btn btn-xs btn-primary" %>
            <% end %>
          </td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= working_times(day.started_at.floor_to(60*15), day.finished_at.floor_to(60*15)) %> 
              <% seconds = (day.finished_at - day.started_at) %>
              <% @total_seconds = @total_seconds.to_i + seconds %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <tr>
        <td colspan="2"><%= format_basic_time(@user.basic_time).to_f * @worked_sum %></td>
        <td colspan="7"></td>
        <td><%= working_times_sum(@total_seconds) unless @total_seconds.nil? %></td>
        <td colspan="5"></td>
        <td>
          <label>所属長承認 未</label>
          <select>
            <option></option>
            <option>上長A</option>
            <option>上長B</option>
          </select>
          <%= link_to "承認", edit_attendances_path(@user, @first_day), class: "btn btn-md btn-primary", :style => "width:100%;"  %>
        </td>
      </tr>
    </tfoot>
    
  </table>
</div>

