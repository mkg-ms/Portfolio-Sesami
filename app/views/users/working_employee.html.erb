<% provide(:title, '出勤社員一覧') %>

<h1>出勤中社員一覧</h1>

<table class="table-bordered table-condensed">
  <thead>
    <tr>
      <th class="col-xs-6">社員番号</th>
      <th class="col-xs-6">名前</th>
    </tr>
  </thead>
  <tbody>
    <% @dates.each do |day| %>
      <tr>
        <td class="col-xs-6">
          <% if day.started_at.present? && day.finised_at.nil? %>
            <%= @user.employee_number %>
          <% end %>
        </td>
        <td class="col-xs-6">
          <% if day.started_at.present? && day.finised_at.nil? %>
            <%= @user.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>