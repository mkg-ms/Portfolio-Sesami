<% provide(:title, '出勤社員一覧') %>

<h1>出勤中社員一覧</h1>

<table class="table-bordered table-condensed">
  <thead>
    <tr>
      <th class="col-xs-6">社員番号</th>
      <th class="col-xs-6">名前</th>
    </tr>
  </thead>
  <tbody>
    <% @workers.each do |worker| %>
      <% user = worker.user %>
      <tr>
        <td class="col-xs-6">
          <%= user.employee_number %>
        </td>
        <td class="col-xs-6">
          <%= user.name %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>