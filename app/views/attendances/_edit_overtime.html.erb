<% provide(:class_text, '残業申請') %>
<% provide(:button_text, '更新') %>

<!--残業申請modal-->
<%= form_with(model: @user, url: update_attendances_overtime_path, local: true, method: :patch) do |f| %>
  <div class="modal-dialog modal-lg modal-dialog-center">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title text-center">【残業申請】</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <table class="table-bordered table-condensed table-striped">
            <tr>
              <th>日付</th>
              <th>曜日</th>
              <th>終了予定時間</th>
              <th>翌日</th>
              <th>業務処理内容</th>
              <th>指示者確認㊞</th>
            </tr>
            <tr>
              <th></th>
              <th></th>
              <th><%= f.time_field "expected_end_time", class: "form-control" %></th>
              <th><%= f.check_box "next", class: "checkbox inline" %></th>
              <th><%= f.text_field "note", class: "form-control" %></th>
              <th>
                <select>
                  <option></option>
                  <option>上長A</option>
                  <option>上長B</option>
                </select>
              </th>
            </tr>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "変更を送信する", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>


