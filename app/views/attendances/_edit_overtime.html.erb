<% provide(:class_text, '残業申請') %>
<% provide(:button_text, '更新') %>

<!--残業申請modal-->
<%= form_with(model: @user, url: update_attendances_overtime_path(@user, day.worked_on, params: {id: @user.id}), local: true,  method: :patch) do |f| %>
  <div class="modal-dialog modal-lg modal-dialog-center">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title text-center">【残業申請】</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <table class="table-bordered table-condensed table-striped">
            <thead>
              <tr>
                <th>日付</th>
                <th>曜日</th>
                <th>終了予定時間</th>
                <th>翌日</th>
                <th>業務処理内容</th>
                <th>指示者確認㊞</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th><%= l(@attendance.worked_on, format: :short) %></th>
                <th>
                  <% if @day.wday == 0 %>
                    <font color="red"><%= %w{日 月 火 水 木 金 土}[@day.wday] %></font>
                  <% elsif @day.wday == 6 %>
                    <font color="blue"><%= %w{日 月 火 水 木 金 土}[@day.wday] %></font>
                  <% else %>
                    <%= %w{日 月 火 水 木 金 土}[@day.wday] %>
                  <% end %>
                </th>
                <th><%= f.time_field :expected_end_time, class: "form-control" %></th>
                <th><%= f.check_box :checkbox, class: "checkbox inline" %></th>
                <th><%= f.text_field :overtime_work, class: "form-control" %></th>
                <th>
                  <select>
                    <option></option>
                    <option>上長A</option>
                    <option>上長B</option>
                  </select>
                </th>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "変更を送信する", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>


