<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "勤怠管理システム", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "トップへ", root_path %></li>
        <% if logged_in? %>
          <li>
            <% if current_user.admin? %>
              <%= link_to "ユーザー一覧", users_path %>
            <% end %>
          </li>
          <li>
            <% if current_user.admin? %>
              <%= link_to "出勤社員一覧", workers_path %>
            <% end %>
          </li>
          <li>
            <% if current_user.admin? %>
              <%= link_to "拠点情報の修正", bases_path %>
            <% end %>
          </li>
          <li>
            <% if current_user.admin? %>
              <%= link_to "基本情報の修正", basic_info_path(current_user{:admin}) %>
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <% unless current_user.admin %>
                  <%= link_to "ユーザー勤怠情報表示", current_user %>
                <% end %>
              </li>
              <li><%= link_to "アカウント情報", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>