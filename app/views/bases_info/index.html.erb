<% provide(:title, '一覧') %>

<h1>拠点一覧</h1>

<table class="table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th colspan="3"></th>
      <th colspan="3"></th>
      <th colspan="2">拠点番号</th>
      <th colspan="2">拠点名</th>
      <th colspan="2">勤怠種類</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td colspan="3"><%= link_to "修正", class: "btn btn-primary" %></td>
      <td colspan="3"><%= link_to "削除", class: "btn btn-primary" %></td>
      <td colspan="2"></td>
      <td colspan="2"></td>
      <td colspan="2"></td>
    </tr>
  </tbody>
</table>
<br>
<!--残業申請modal-->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#new_base_info">拠点情報追加</button>

<!--残業申請modal-->
<div id="new_base_info" class="modal fade" role="dialog">
  <div class="modal-dialog modal-mid">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title text-center">拠点作成</h4>
      </div>
      <div class="modal-body">
        <table class="table-bordered table-condensed table-striped">
          <tr>
            <th>日付</th>
            <th>曜日</th>
            <th>終了予定時間</th>
          </tr>
        </table>
      </div>
      <div class="modal-footer">
        <input type="submit" name="commit" value="変更を送信する" class="btn btn-primary" data-disable-with="変更を送信する">
      </div>
    </div>
  </div>
</div>
