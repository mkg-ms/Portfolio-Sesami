<% provide(:title, '拠点一覧') %>

<h1>拠点一覧</h1>

<table class="table-bordered table-condensed" id="bases-info">
  <thead>
    <tr>
      <th colspan="3"></th>
      <th colspan="3"></th>
      <th colspan="2">拠点番号</th>
      <th colspan="2">拠点名</th>
      <th colspan="2">勤怠種類</th>
    </tr>
  </thead>
  <tbody>
    <% @bases.each do |base| %>
      <tr>
        <td colspan="3"><%= link_to "修正", edit_basis_path(base), class: "btn btn-sm btn-primary" %></td>
        <td colspan="3"><%= link_to "削除", basis_path(base), method: :delete,
                        data: { confirm: "削除してよろしいですか？" }, class: "btn btn-sm btn-primary" %></td>
        <td colspan="2"><%= base.base_number %></td>
        <td colspan="2"><%= base.base_name %></td>
        <td colspan="2"><%= base.attendance_type %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<tfoot>
  <tr>
    <td><%= link_to "拠点情報追加", new_basis_path, class: "btn btn-primary" %></td>
  </tr>
</tfoot>
